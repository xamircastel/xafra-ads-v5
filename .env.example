# Database Configuration
DATABASE_URL="postgresql://xafra_user:xafra_password@localhost:5432/xafra_ads_v5"
REDIS_URL="redis://localhost:6379"

# Encryption Configuration
ENCRYPTION_KEY="your-256-bit-encryption-key-here-change-in-production"
ENCRYPTION_SALT="your-salt-value-here-change-in-production"

# Service Ports
CORE_SERVICE_PORT=3001
TRACKING_SERVICE_PORT=3002
AUTH_SERVICE_PORT=3003
CAMPAIGN_SERVICE_PORT=3004
POSTBACK_SERVICE_PORT=3005
API_GATEWAY_PORT=3000

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# GCP Configuration (for production)
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./config/gcp-service-account.json

# External Services
WEBHOOK_TIMEOUT=5000
MAX_REDIRECT_TIME=50

# Security
JWT_SECRET=your-jwt-secret-key-here
API_RATE_LIMIT=1000

# Costa Rica Kolbi Specific
KOLBI_SHORT_TRACKING_LENGTH=6
KOLBI_TRACKING_PREFIX=KLB